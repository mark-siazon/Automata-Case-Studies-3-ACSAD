---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="view-transition" content="same-origin" />
    <title>{title}</title>
    
    <!-- Loading indicator -->
    <style>
      .loading-indicator {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 4px;
        background: linear-gradient(to right, transparent, var(--primary), var(--accent), transparent);
        z-index: 9999;
        opacity: 0;
        transition: opacity 0.3s ease;
        animation: loadingBar 1.5s infinite;
      }
      
      .loading .loading-indicator {
        opacity: 1;
      }
      
      @keyframes loadingBar {
        0% { transform: translateX(-100%); }
        100% { transform: translateX(100%); }
      }
    </style>
    
    <!-- SEO Meta Tags -->
    <meta name="description" content="A collection of websites and applications developed by III-ACSAD students as case studies for Automata course" />
    <meta name="keywords" content="web development, student projects, Automata, case studies, programming" />
    <meta name="author" content="III-ACSAD Students" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://acads-automata-case-studies.vercel.app/" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content="A collection of websites and applications developed by III-ACSAD students as case studies for Automata course" />
    <meta property="og:image" content="/og-image.jpg" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://acads-automata-case-studies.vercel.app/" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content="A collection of websites and applications developed by III-ACSAD students as case studies for Automata course" />
    <meta property="twitter:image" content="/og-image.jpg" />
    
    <!-- Structured Data for SEO -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "CollectionPage",
        "name": "III-ACSAD Case Study Compilation",
        "description": "A collection of websites and applications developed by III-ACSAD students as case studies for Automata course",
        "publisher": {
          "@type": "Organization",
          "name": "III-ACSAD Students",
          "logo": {
            "@type": "ImageObject",
            "url": "https://acads-automata-case-studies.vercel.app/favicon.svg"
          }
        },
        "url": "https://acads-automata-case-studies.vercel.app/"
      }
    </script>
    
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Space+Grotesk:wght@600;700&display=swap"
      rel="stylesheet"
    />
    
    <!-- Preload critical resources -->
    <link rel="preload" href="/Background.webp" as="image" />
  </head>
  <body
    class="min-h-screen h-screen bg-no-repeat bg-cover bg-center bg-fixed"
    style="background-image: url('/Background.webp');"
  >
    <!-- Loading indicator -->
    <div class="loading-indicator"></div>
    
    <!-- Skip to content link for accessibility -->
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-2 focus:bg-primary focus:text-text focus:outline-none focus:rounded">
      Skip to content
    </a>
    
    <header class="relative z-1">
      <div
        class="relative max-w-screen mx-auto my-5 px-4 py-6 rounded-xl bg-primary/30 backdrop-blur-lg border-b-2 border-white/25 text-center shadow-md overflow-hidden"
      >
        <!-- Gradient overlay for glass effect -->
        <div
          class="pointer-events-none absolute inset-0 rounded-b-2xl bg-gradient-to-br from-primary/40 via-accent/20 to-transparent opacity-80"
        >
        </div>
        <h1
          class="relative text-3xl xs:text-4xl md:text-5xl font-heading font-bold drop-shadow-lg z-10 tracking-tight"
        >
                  <a
            href="https://github.com/mark-siazon/Automata-Case-Studies-3-ACSAD"
            target="_blank"
            rel="noopener noreferrer"
            class="hover:underline transition-colors"
            >3 - ACSAD | Case Study Compilation</a
          >
        </h1>

        <p class="text-text text-sm xs:text-md">
          A collection of websites from III-ACSAD students (S.Y. 2024-2025)
          submmited to
          <span class="text-secondary">Prof. Lester Diampoc</span>
        </p>
      </div>
      <!-- Subtle divider -->
      <div
        class="h-1 bg-gradient-to-r from-transparent via-primary/40 to-transparent opacity-60"
      >
      </div>
    </header>

    <main id="main-content" class="relative z-10">
      <slot />
    </main>
    <footer class="relative z-1 mt-12">
      <div
        class="max-w-fit p-6 rounded-t-xl bg-primary/30 backdrop-blur-lg border-t border-primary/40 shadow-md overflow-hidden flex flex-col items-start ml-0"
      >
        <div
          class="pointer-events-none absolute inset-0 rounded-t-2xl bg-gradient-to-tr from-primary/40 via-accent/20 to-transparent opacity-80"
        >
        </div>
        <p
          class="relative z-10 text-accent font-heading text-lg font-semibold drop-shadow transition-colors"
        >
          Compiled by
          <a
            href="https://github.com/mark-siazon"
            target="_blank"
            rel="noopener noreferrer"
            class="underline hover:text-primary transition-colors hover:no-underline hover:text-secondary"
            >Siazon, Mark</a
          >
        </p>
      </div>
    </footer>
    <div class="fixed inset-0 bg-black/40 -z-0 pointer-events-none"></div>
  </body>
</html>

<style is:global>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family: "Inter", system-ui, sans-serif;
    letter-spacing: -0.01em;
    font-feature-settings: "ss01", "cv01", "cv02", "cv03";
    font-smooth: always;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
  h1,
  h2,
  h3,
  .font-heading {
    font-family: "Space Grotesk", "Inter", system-ui, sans-serif;
    letter-spacing: -0.01em;
  }
  h1 {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--accent);
    margin-bottom: 0.5em;
  }
  h2 {
    font-size: 2rem;
    font-weight: 600;
    color: var(--primary);
    margin-top: 2em;
    margin-bottom: 0.5em;
  }
  h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--secondary);
    margin-top: 1.5em;
    margin-bottom: 0.5em;
  }
</style>
